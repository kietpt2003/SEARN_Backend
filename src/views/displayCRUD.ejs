<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td {
            border: 1px solid white;
            border-collapse: collapse;
        }

        th {
            border: 1px solid #dddddd;
            text-align: center;
            padding: 8px;
            background-color: #96D4D4;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

        .btn-edit {
            outline: none;
            border: none;
            background-color: orange;
            height: 25px;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-delete {
            outline: none;
            border: none;
            background-color: red;
            height: 25px;
            border-radius: 5px;
        }
    </style>
</head>

<body>
    <table>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Password</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
        <% tableUsers.forEach(function(user, index) { %>
            <tr class="tableRow">
                <td>
                    <%= user.id %>
                </td>
                <td>
                    <%= user.email %>
                </td>
                <td>
                    <input type="password" readonly value="<%= user.password %>" />
                </td>
                <td>
                    <%= user.firstName %>
                </td>
                <td>
                    <%= user.lastName %>
                </td>
                <td>
                    <%= user.address %>
                </td>
                <td>
                    <a class="btn-edit" href="/edit-crud?id=<%= user.id %>">Edit</a>
                    <a class="btn-delete" href="/delete-crud?id=<%= user.id %>">Delete</a>
                </td>
            </tr>
            <% }) %>
    </table>
</body>

</html>